{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Mean Suicide rates per 100K (1987 to 2014)",
  "width": 650,
  "height": 400,
  "projection": {"type": "equirectangular"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/dtan0032/FIT3179_A2/main/js/ne_110m_graticules_30.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": "null", "stroke": "lightgray","strokeWidth":0.4}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/dtan0032/FIT3179_A2/main/js/ne_110m_admin_0_countries.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "darkgrey"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/dtan0032/FIT3179_A2/main/js/ne_110m_admin_0_countries.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/dtan0032/FIT3179_A2/main/data/mean_rates(country).csv"
            },
            "key": "Country",
            "fields": ["mean_rates"]
          }
        }
      ],
      "layer": [
        {
          "mark": {"type": "geoshape"},
          "encoding": {
            "color": {
              "field": "mean_rates",
              "type": "quantitative",
              "title": "Suicides/100k Pop",
              "scale": {
                "type": "threshold",
                "domain": [5, 13, 30, 35],
                "range": ["#fdd0a2", "#fdae6b", "#fd8d3c", "#e6550d", "#a63603"]
              }
            },
            "tooltip": [
              {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "mean_rates",
                "type": "quantitative",
                "title": "Suicides/100k Population"
              }
            ]
          }
        }
      ]
    },
    {
      "data": {"values": [{}]},
      "encoding": {"latitude": {"datum": -25}, "longitude": {"datum": -175}},
      "layer": [
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "top",
            "dx": 0,
            "dy": 0,
            "x": "width",
            "text": "Grey",
            "color": "#999999",
            "fontSize": 15,
            "fontStyle": "bold"
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "top",
            "dx": 37,
            "dy": 0,
            "x": "width",
            "text": "coloured countries ",
            "fontSize": 15,
            "fontStyle": "bold"
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "top",
            "dx": 0,
            "dy": 15,
            "x": "width",
            "text": "do not have data due to ",
            "fontSize": 15,
            "fontStyle": "bold"
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "top",
            "dx": 0,
            "dy": 30,
            "x": "width",
            "text": "dataset limitations.",
            "fontSize": 15,
            "fontStyle": "bold"
          }
        }
      ]
    }
  ],
  "config": {}
}
