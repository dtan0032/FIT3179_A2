{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/dtan0032/FIT3179_A2/main/data/master_updated.csv"
  },
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [null, "Europe", "Americas", "Asia", "Oceania", "Africa"],
        "labels": [
          "Show All",
          "Europe",
          "Americas",
          "Asia",
          "Oceania",
          "Africa"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Continent_selection == null || datum.continent == Continent_selection"
    },
    {
      "aggregate": [
        {"op": "average", "field": "suicides/100k pop", "as": "suicide rates"},
        {"op": "average", "field": "population", "as": "population"}
      ],
      "groupby": ["country"]
    },
     {
      "window": [{
        "op": "rank",
        "as": "rank"
      }],
      "sort": [{ "field": "suicide rates", "order": "descending" }]
    }, {
      "filter": "datum.rank <= 10"}
  ],
  "mark": {"type": "bar", "tooltip": true},
  "encoding": {
    "y": {
      "field": "country",
      "type": "nominal",
      "title": "Country",
      "sort": "-x"
    },
    "x": {"field": "suicide rates", "type": "quantitative"},
    "color":{"condition": [{"test": "datum['rank'] == 1", "value": "indianred"},
            {"test": "datum['rank'] == 2", "value": "orange"},
            {"test": "datum['rank'] == 3", "value": "#e1ad01"}
            ],
          "value": "lightgrey"
    }
  },
  "config": {}
}
